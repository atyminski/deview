<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:Gevlee.Deview.Application.ViewModels;assembly=Gevlee.Deview.Application"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:Gevlee.Deview.Application.Views;assembly=Gevlee.Deview.Application"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Gevlee.Deview.Application.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="Deview">
  <Grid RowDefinitions="20,*">
    <ContentControl DockPanel.Dock="Top" Content="{Binding MainMenuModel}"/>
    <ContentControl Grid.Row="1" Content="{Binding OpenedLogsContainerModel}"/>
  </Grid>
</Window>
